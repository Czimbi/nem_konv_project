<%- include('../partials/header', { title: 'Customers' }) %>

<div class="row mb-4">
    <div class="col-md-8">
        <h1>Customers</h1>
    </div>
    <div class="col-md-4 text-end">
        <a href="/customers/new" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New Customer
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Country</th>
                <th>City</th>
                <th>Street</th>
                <th>House #</th>
                <th>Phone</th>
                <th>Birth Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% customers.forEach(customer => { %>
                <tr>
                    <td><%= customer.given_name %> <%= customer.surname %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.country %></td>
                    <td><%= customer.city %></td>
                    <td><%= customer.street %></td>
                    <td><%= customer.house_number %></td>
                    <td><%= customer.phone %></td>
                    <td><%= customer.birth_date ? new Date(customer.birth_date).toLocaleDateString() : '' %></td>
                    <td>
                        <a href="/customers/<%= customer._id %>/edit" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form action="/api/customers/<%= customer._id %>?_method=DELETE" method="POST" style="display:inline-block;">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this customer?');">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %> 